<%- include('navbar.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  .form-section{
    margin-top: -100px;
  }
  .form-wrapper {
    margin: 40px auto;
    padding: 20px;
    background: #ffffff;
    border-radius: 10px;
  }

  .form-wrapper h2 {
    text-align: center;
    margin-bottom: 25px;
    font-weight: 600;
    color: #2c3e50;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    font-weight: 500;
    margin-bottom: 6px;
    display: block;
    color: #34495e;
  }

  .form-group input {
    width: 100%;
    padding: 8px 10px;
    border-radius: 6px;
    border: 1px solid #ced4da;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    border-color: #007bff;
    box-shadow: 0 0 6px rgba(0,123,255,0.3);
    outline: none;
  }

  .submit-btn {
    width: 100%;
    background: linear-gradient(45deg, #3e4e5f, #373e40);
    border: none;
    color: white;
    padding: 12px;
    font-size: 16px;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .submit-btn:hover {
    background: linear-gradient(45deg, #45474a, #6f7173);
    transform: translateY(-2px);
  }

  /* Section styling */
  section.form-section {
    background: #f4f7fc;
    padding: 50px 0;
  }
</style>

<!-- Form Page Content -->
<section class="form-section">
  <div class="container">
    <div class="form-wrapper">
      <h2><i class="bi bi-pencil-square"></i> Edit Footer Details</h2>
      <form action="/admin/update_footer" method="POST" enctype="multipart/form-data">
        
        <div class="row">
          <!-- Hero 1 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Quick Names</b></h5>
            <div class="form-group">
              <input type="text" name="quick_name1" value="<%=footerDetails[0].quick_name1%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_name2" value="<%=footerDetails[0].quick_name2%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_name3" value="<%=footerDetails[0].quick_name3%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_name4" value="<%=footerDetails[0].quick_name4%>" required>
            </div>
          </div>

          <!-- Hero 2 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Quick Links</b></h5>
            <div class="form-group">
              <input type="text" name="quick_link1" value="<%=footerDetails[0].quick_link1%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_link2" value="<%=footerDetails[0].quick_link2%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_link3" value="<%=footerDetails[0].quick_link3%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="quick_link4" value="<%=footerDetails[0].quick_link4%>" required>
            </div>
          </div>

          <!-- Hero 3 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Our Services</b></h5>
            <div class="form-group">
              <input type="text" name="service1" value="<%=footerDetails[0].service1%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="service2" value="<%=footerDetails[0].service2%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="service3" value="<%=footerDetails[0].service3%>" required>
            </div>
            <div class="form-group">
              <input type="text" name="service4" value="<%=footerDetails[0].service4%>" required>
            </div>
          </div>
          
            <div class="col-md-12 mb-4">
            <div class="form-group">
            <h5 class="text-dark"><b>Project Description</b></h5>
              <textarea class="w-100" name="footer_des" required> <%=footerDetails[0].footer_des%>
              </textarea>
            </div>
          </div>
        </div>
     
        <!-- Submit -->
        <button type="submit" class="submit-btn mt-3">
          <i class="bi bi-check-circle"></i> Update
        </button>
      </form>
    </div>
  </div>
</section>

<%- include('footer.ejs') %>
