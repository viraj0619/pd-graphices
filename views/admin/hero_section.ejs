<%- include('navbar.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  .form-section{
    margin-top: -100px;
  }
  .form-wrapper {
    margin: 40px auto;
    padding: 20px;
    background: #ffffff;
    border-radius: 10px;
  }

  .form-wrapper h2 {
    text-align: center;
    margin-bottom: 25px;
    font-weight: 600;
    color: #2c3e50;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    font-weight: 500;
    margin-bottom: 6px;
    display: block;
    color: #34495e;
  }

  .form-group input {
    width: 100%;
    padding: 8px 10px;
    border-radius: 6px;
    border: 1px solid #ced4da;
    transition: all 0.3s ease;
  }

  .form-group input:focus {
    border-color: #007bff;
    box-shadow: 0 0 6px rgba(0,123,255,0.3);
    outline: none;
  }

  .submit-btn {
    width: 100%;
    background: linear-gradient(45deg, #3e4e5f, #373e40);
    border: none;
    color: white;
    padding: 12px;
    font-size: 16px;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .submit-btn:hover {
    background: linear-gradient(45deg, #45474a, #6f7173);
    transform: translateY(-2px);
  }

  /* Section styling */
  section.form-section {
    background: #f4f7fc;
    padding: 50px 0;
  }
</style>

<!-- Form Page Content -->
<section class="form-section">
  <div class="container">
    <div class="form-wrapper">
      <h2><i class="bi bi-pencil-square"></i> Edit Hero Section</h2>
      <form action="/admin/update_hero" method="POST" enctype="multipart/form-data">
        
        <div class="row">
          <!-- Hero 1 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Hero Slider 1</b></h5>
            <div class="form-group">
              <label for="name">Hero Name 1</label>
              <input type="text" name="name1" value="<%=heroData[0].name1%>" required>
            </div>
            <div class="form-group">
              <label for="name">Sub Name 1</label>
              <input type="text" name="subname1" value="<%=heroData[0].subname1%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Name 1</label>
              <input type="text" name="buttonname1" value="<%=heroData[0].buttonname1%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Path 1</label>
              <input type="text" name="buttonpath1" value="<%=heroData[0].buttonpath1%>" required>
            </div>
          </div>

          <!-- Hero 2 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Hero Slider 2</b></h5>
            <div class="form-group">
              <label for="name">Hero Name 2</label>
              <input type="text" name="name2" value="<%=heroData[0].name2%>" required>
            </div>
            <div class="form-group">
              <label for="name">Sub Name 2</label>
              <input type="text" name="subname2" value="<%=heroData[0].subname2%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Name 2</label>
              <input type="text" name="buttonname2" value="<%=heroData[0].buttonname2%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Path 2</label>
              <input type="text" name="buttonpath2" value="<%=heroData[0].buttonpath2%>" required>
            </div>
          </div>

          <!-- Hero 3 -->
          <div class="col-md-4 mb-4">
            <h5 class="text-dark"><b>Hero Slider 3</b></h5>
            <div class="form-group">
              <label for="name">Hero Name 3</label>
              <input type="text" name="name3" value="<%=heroData[0].name3%>" required>
            </div>
            <div class="form-group">
              <label for="name">Sub Name 3</label>
              <input type="text" name="subname3" value="<%=heroData[0].subname3%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Name 3</label>
              <input type="text" name="buttonname3" value="<%=heroData[0].buttonname3%>" required>
            </div>
            <div class="form-group">
              <label for="name">Button Path 3</label>
              <input type="text" name="buttonpath3" value="<%=heroData[0].buttonpath3%>" required>
            </div>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="submit-btn mt-3">
          <i class="bi bi-check-circle"></i> Update
        </button>
      </form>
    </div>
  </div>
</section>

<%- include('footer.ejs') %>
