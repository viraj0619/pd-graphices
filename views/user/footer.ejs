<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Function to toggle desktop search box visibility
  function toggleSearchBox() {
    const desktopSearchBox = document.getElementById("searchBoxDesktop");
    if (desktopSearchBox) {
      desktopSearchBox.classList.toggle("active");
      if (desktopSearchBox.classList.contains("active")) {
        desktopSearchBox.querySelector("input").focus();
      }
    }
  }

  // Function to show mobile search input field when mobile search icon is clicked
  function showMobileSearch() {
    const navbarCollapse = document.getElementById('navbarContent');
    const mobileSearchInput = navbarCollapse.querySelector('.search-box-mobile input');
    
    // Ensure the menu is expanded if not already
    const bsCollapse = new bootstrap.Collapse(navbarCollapse, { toggle: false });
    if (!navbarCollapse.classList.contains('show')) {
      bsCollapse.show();
      // Add a slight delay to focus after collapse animation
      navbarCollapse.addEventListener('shown.bs.collapse', () => {
        mobileSearchInput.focus();
      }, { once: true });
    } else {
      mobileSearchInput.focus();
    }
  }

  // Close desktop search box when clicking outside of it or its button
  document.addEventListener('click', function(event) {
    const desktopSearchBox = document.getElementById("searchBoxDesktop");
    const searchIconBtn = document.querySelector('.search-container.d-lg-block .search-icon-btn'); // Desktop search button
    
    // Check if the click is within the desktop search box or its toggle button
    const isClickInsideSearchBox = desktopSearchBox && desktopSearchBox.contains(event.target);
    const isClickOnSearchButton = searchIconBtn && searchIconBtn.contains(event.target);

    // If desktop search box is active, and click is outside, and it's a desktop view
    if (desktopSearchBox && desktopSearchBox.classList.contains('active') && !isClickInsideSearchBox && !isClickOnSearchButton && window.innerWidth >= 992) {
      desktopSearchBox.classList.remove('active');
    }
  });

  // Ensure desktop search box closes when window resizes from desktop to mobile
  window.addEventListener('resize', function() {
    const desktopSearchBox = document.getElementById("searchBoxDesktop");
    if (window.innerWidth < 992 && desktopSearchBox && desktopSearchBox.classList.contains('active')) {
      desktopSearchBox.classList.remove('active');
    }
  });

  // When the mobile menu collapses, ensure the mobile search input loses focus (optional)
  document.getElementById('navbarContent').addEventListener('hide.bs.collapse', function () {
    const mobileSearchInput = this.querySelector('.search-box-mobile input');
    if (mobileSearchInput) {
      mobileSearchInput.blur();
    }
  });
  
</script>
