<%- include('navbar.ejs') %>
<section class="contact-section">
  <div class="container">
    <h2 class="text-center contact-header mb-5 mt-5">Contact Us</h2>
    <div class="row g-4">

      <!-- Contact Details -->
      <div class="col-lg-5">
        <div class="contact-info-box d-flex align-items-start">
          <i class="bi bi-geo-alt-fill"></i>
          <div>
            <h6 class="mb-1">Our Address</h6>
            <p class="mb-0"><%=websiteInfo[0].admin_address%></p>
          </div>
        </div>
        <div class="contact-info-box d-flex align-items-start">
          <i class="bi bi-telephone-fill"></i>
          <div>
            <h6 class="mb-1">Phone</h6>
            <p class="mb-0">+91 <%=websiteInfo[0].admin_mobile%></p>
          </div>
        </div>
        <div class="contact-info-box d-flex align-items-start">
          <i class="bi bi-envelope-fill"></i>
          <div>
            <h6 class="mb-1">Email</h6>
            <p class="mb-0"><%=websiteInfo[0].admin_email%></p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="col-lg-7">
        <div class="contact-form">
          <form id="contactForm" action="/user_contact" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name" class="custom-label">Full Name</label>
                <input type="text" id="name" name="user_name" class="custom-input" required pattern="^[A-Za-z\s]+$">
              </div>
              <div class="col-md-6 mb-3">
                <label for="email" class="custom-label">Email</label>
                <input type="email" id="email" name="user_email" class="custom-input" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="subject" class="custom-label">Subject</label>
              <input type="text" id="subject" name="user_subject" class="custom-input" required pattern="^[A-Za-z\s]+$">
            </div>
            <div class="mb-3">
              <label for="message" class="custom-label">Message</label>
              <textarea id="message" rows="4" class="custom-textarea" name="user_message" maxlength="300" required></textarea>
              <small id="charCount" class="text-muted">0 / 300 characters</small>
            </div>
            <button type="submit" class="btn-custom">Send Message</button>

            <div class="alert alert-success success-message text-center mt-3" id="successMessage" style="display: none;">
              âœ… Message sent successfully!
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>
</section>
<%- include('footer.ejs') %>

<script>
  // Character count for message box
  const messageBox = document.getElementById("message");
  const charCount = document.getElementById("charCount");
  messageBox.addEventListener("input", () => {
    charCount.textContent = messageBox.value.length + " / 300 characters";
  });

  // Form submit with AJAX
  document.getElementById("contactForm").addEventListener("submit", function (e) {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);

    fetch(form.action, {
      method: "POST",
      body: formData
    })
    .then(response => {
      if (response.ok) {
        const successMsg = document.getElementById("successMessage");
        successMsg.style.display = "block";
        form.reset();
        charCount.textContent = "0 / 300 characters"; // reset counter
        setTimeout(() => {
          successMsg.style.display = "none";
        }, 3000); // Hide after 3 seconds
      } else {
        alert("Something went wrong. Please try again.");
      }
    })
    .catch(error => {
      console.error("Error submitting the form:", error);
      alert("Network error.");
    });
  });
</script>
