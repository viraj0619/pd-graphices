<%-include('navbar.ejs')%>

<div class="custom-body">

  <div class="container">
    <div class="update-card-custom">
      <h3 class="update-title-custom"><i class="bi bi-person-lines-fill"></i> Update Your Details</h3>
      
      <!-- Update Form -->
      <form action="/update_user_details" method="POST">
        
        <!-- First Name -->
        <div class="mb-3">
          <label class="form-label-custom">First Name</label>
          <div class="input-group">
            <span class="input-group-text input-group-text-custom"><i class="bi bi-person"></i></span>
            <input 
              type="text" 
              name="firstname" 
              value="<%= userDetails.firstname %>" 
              class="form-control form-control-custom" 
              placeholder="Enter your first name" 
              required
            >
          </div>
        </div>

        <!-- Last Name -->
        <div class="mb-3">
          <label class="form-label-custom">Last Name</label>
          <div class="input-group">
            <span class="input-group-text input-group-text-custom"><i class="bi bi-person"></i></span>
            <input 
              type="text" 
              name="lastname" 
              value="<%= userDetails.lastname %>" 
              class="form-control form-control-custom" 
              placeholder="Enter your last name" 
              required
            >
          </div>
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label class="form-label-custom">Username</label>
          <div class="input-group">
            <span class="input-group-text input-group-text-custom"><i class="bi bi-person-circle"></i></span>
            <input 
              type="text" 
              name="username" 
              value="<%= userDetails.username %>" 
              class="form-control form-control-custom" 
              placeholder="Choose a username" 
              required
            >
          </div>
        </div>

        <!-- Mobile Number -->
        <div class="mb-3">
          <label class="form-label-custom">Mobile Number</label>
          <div class="input-group">
            <span class="input-group-text input-group-text-custom"><i class="bi bi-telephone"></i></span>
            <input 
              type="tel" 
              name="user_mobile" 
              value="<%= userDetails.user_mobile %>" 
              class="form-control form-control-custom" 
              placeholder="Enter your mobile number" 
              pattern="[0-9]{10}" 
              maxlength="10" 
              required
            >
          </div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label class="form-label-custom">Email</label>
          <div class="input-group">
            <span class="input-group-text input-group-text-custom"><i class="bi bi-envelope"></i></span>
            <input 
              type="email" 
              name="email" 
              value="<%= userDetails.email %>" 
              class="form-control form-control-custom" 
              placeholder="Enter your email" 
              readonly disabled
            >
          </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-4">
          <button type="reset" class="btn btn-custom-cancel">
            <i class="bi bi-x-circle"></i> Cancel
          </button>
          <button type="submit" class="btn btn-custom-save">
            <i class="bi bi-save"></i> Save Changes
          </button>
        </div>

      </form>
    </div>
  </div>

</div>

<%-include('footer.ejs')%>
