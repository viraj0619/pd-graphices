<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<style>
  .form-wrapper {
    max-width: 450px;
    margin: 50px auto;
    padding: 30px;
    background: #f9f9f9;
    border-radius: 12px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    margin-top: 120px !important;
  }

  .form-wrapper h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #333;
  }

  .form-group {
    margin-bottom: 20px;
    position: relative;
  }

  .form-group label {
    font-weight: 600;
    margin-bottom: 5px;
    display: block;
    color: #555;
  }

  .form-group input {
    width: 100%;
    padding: 10px 35px 10px 10px;
    font-size: 15px;
    border-radius: 6px;
    border: 1px solid #ccc;
    outline: none;
  }
.form-group input:focus {
  border: 2px solid blue;
}
  .toggle-password {
    position: absolute;
    top: 36px;
    right: 10px;
    font-size: 18px;
    color: #666;
    cursor: pointer;
  }

  .submit-btn {
    width: 100%;
    padding: 12px;
    background-color: #007bff;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: 600;
    font-size: 16px;
    transition: background-color 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #0056b3;
  }

  #messageBox {
    font-weight: 500;
  }

  @media (max-width: 576px) {
    .form-wrapper {
      margin: 30px 10px;
      padding: 20px;
    }
  }
</style>

<section class="form-group mt-5">
  <div class="container mt-5">
    <div class="form-wrapper">
      <h2>Change Password</h2>

      <!-- Flash Message -->
      <div id="messageBox" style="display: none; padding: 10px; margin-bottom: 15px; border-radius: 5px;"></div>

      <form id="changePasswordForm">
        <!-- Old Password -->
        <div class="form-group">
          <label>Old Password</label>
          <input type="password" name="user_password" id="oldPassword" required>
          <i class="bi bi-eye-slash-fill toggle-password" toggle="#oldPassword"></i>
        </div>

        <!-- New Password -->
        <div class="form-group">
          <label>New Password</label>
          <input type="password" name="user_newPassword" id="newPassword" required>
          <i class="bi bi-eye-slash-fill toggle-password" toggle="#newPassword"></i>
        </div>

        <button type="submit" class="submit-btn">Change Password</button>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("changePasswordForm");
  const messageBox = document.getElementById("messageBox");

  form.addEventListener("submit", async function (e) {
    e.preventDefault();

    const formData = new FormData(form);
    const body = new URLSearchParams(formData);

    const response = await fetch("/update_user_password", {
      method: "POST",
      headers: { "Content-Type": "application/x-www-form-urlencoded" },
      body
    });

    const result = await response.json();

    messageBox.style.display = "block";
    messageBox.textContent = result.message;

    if (result.success) {
      messageBox.style.backgroundColor = "#d4edda";
      messageBox.style.color = "#155724";
      form.reset();
    } else {
      messageBox.style.backgroundColor = "#f8d7da";
      messageBox.style.color = "#721c24";
    }
  });

  // Toggle password visibility
  document.querySelectorAll(".toggle-password").forEach(icon => {
    icon.addEventListener("click", function () {
      const input = document.querySelector(this.getAttribute("toggle"));
      const type = input.getAttribute("type") === "password" ? "text" : "password";
      input.setAttribute("type", type);
      this.classList.toggle("bi-eye-fill");
      this.classList.toggle("bi-eye-slash-fill");
    });
  });
</script>


